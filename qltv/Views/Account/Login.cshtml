@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Login</title>
	<link href="~/Content/style.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Content/bootstrap/js/bootstrap.bundle.js"></script>
	<link href="~/Content/toastr.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body style="background-color: rgb(39, 174, 97)">
	<div class="container-fluid d-flex justify-content-center align-items-center">
		<div class="container" style="padding: 4rem 0;">
			<div class="row d-flex card flex-row p-3 align-items-center justify-content-center shadow-lg">
				<div class="col-md-6 order-md-2	d-flex justify-content-center">
					<img src="https://i.ytimg.com/vi/hMtJdaTZRNY/hqdefault.jpg" style="height: 450px; width: 450px" />
				</div>
				<div class="col-md-6 ">
					<div class="row justify-content-center">
						<div class="col-md-8">
							<div class="mb-4">
								<h3>Hệ thống quản lý thư viện <strong>BATOCOM</strong></h3>
							</div>
							@if (!string.IsNullOrEmpty(ViewBag.ErrorLog))
							{
								<div class="alert alert-danger" role="alert">
									@Html.Raw(ViewBag.ErrorLog)
								</div>
							}

							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
							{
								<div class="form-group first">
									<div class="form-group">
										@Html.Label("Tên đăng nhập", htmlAttributes: new { @class = "control-label col-md-4" })
										<div class="col-md-10">
											@Html.TextBox("username", null, new { @class = "form-control", id = "username" })
											@Html.ValidationMessage("staffName", "", new { @class = "text-danger" })
										</div>
									</div>
								</div>
								<div class="form-group last mb-4 mt-4">
									<div class="form-group">
										@Html.Label("Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
										<div class="col-md-10">
											@Html.Password("password", null, new { @class = "form-control", id = "password" })
											@Html.ValidationMessage("password", "", new { @class = "text-danger" })
										</div>
									</div>
								</div>
								<div class="d-flex mb-5 align-items-center">
									<label class="control control--checkbox mb-0">
										<span class="caption">Remember me</span>
										<input type="checkbox" name="rememberMe" value="true">
										<div class="control__indicator"></div>
									</label>
								</div>
								<input type="submit" value="Đăng nhập" class="btn btn-primary" id="btnLogin" />
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		$(function () {
			$('#loginForm').submit(function (event) {
				var username = $('#username').val();
				var password = $('#password').val();

				if (!username || !password) {
					event.preventDefault();
					alert('Kiểm tra lại tên đăng nhập và mật khẩu');
				}
			});
		});
	</script>
</body>
</html>
